@{
    ViewData["Title"] = "Lab 3";
}

<h1>Lab 3</h1>

<p>Implementation of finding the shortest path between two states in a game or problem, where the state is represented by a two-dimensional array of symbols.</p>
<form asp-action="Lab3Result" method="post">
    <div class="form-group">
        <label for="userInput">Enter the state grid (4 lines, 4 characters per line):</label>
        <textarea id="userInput" name="userInput" class="form-control" rows="8" required></textarea>
        <small class="form-text text-muted">Enter at least 4 lines (2 for initial state, 2 for final state).</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewBag.Error != null)

{
    <div class="alert alert-danger mt-3">
        <strong>Error:</strong> @ViewBag.Error
    </div>
}

else if (ViewBag.Result != null)

{
    <div class="alert alert-success mt-3">
        <strong>Result:</strong> @ViewBag.Result
    </div>
}